{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check",
            "type": "shell",
            "command": "cargo check",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (debug)",
            "type": "shell",
            "command": "cargo build",
            "group": "build"
        },
        {
            "label": "Build (release)",
            "type": "shell",
            "command": "cargo build --release",
            "group": "build"
        },
        {
            "label": "Build WASM (release)",
            "type": "shell",
            "command": "wasm-pack build --release client",
            "group": "build"
        },
        {
            "label": "Run UI dev server",
            "type": "shell",
            "dependsOn": ["Build WASM (release)"],
            "group": "none",
            "command": "npm run start",
            "options": {
                "cwd": "${workspaceFolder}/ui"
            }
        },
        {
            "label": "All Tests",
            "type": "shell",
            "command": "cargo test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
