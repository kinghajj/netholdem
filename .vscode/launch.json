{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Build (debug)",
            "program": "${workspaceFolder}/target/debug/netholdem_server",
            "cwd": "${workspaceFolder}/netholdem_server",
            "env": {"NETHOLDEM_SERVER_RUN_MODE": "development"}
        },
        {
            "name": "Debug client",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "Build (debug)",
            "program": "${workspaceFolder}/target/debug/netholdem_client",
            "cwd": "${workspaceFolder}",
            "args": ["0.0.0.0:8023"],
            "env": {"RUST_LOG": "debug"}
        }
    ]
}